{
  "compilerOptions": {
    "outDir": "./build/",
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es2015",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*", "Globals.d.ts"]
}
